import requests
from bs4 import BeautifulSoup
 
response = requests.get('https://www.sedaily.com/Stock/Quote/?mobile')
 
html = response.text

#print(html)
 
soup = BeautifulSoup(html, 'html.parser')

#table01 = soup.find('dl',{'class':'.tbody'})

#print(table01)

for info in soup.select('.tbody'):
    s_name = info.dt.text
    s_price = info.dd.span.text
    s_code = info.dd['id'][len(str)-6:len(str)]
    
    print(info.dt.text ,end="\t")
    print(info.dd.span.text, end="\t")
    print(info.dd['id'])
    
print("========================================")     


    
    





