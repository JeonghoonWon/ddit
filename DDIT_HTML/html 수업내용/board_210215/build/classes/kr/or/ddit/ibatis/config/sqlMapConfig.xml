<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig
	PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
	
	<!-- 이 문서는 ibatis 의 환경 설정 파일입니다. -->
	
	<sqlMapConfig>

<!-- DB와 연결하는 정보를 properties파일에 설정해 놓고이 properties파일의 내용을 읽어 올 수 있도록 설정한다. -->


<properties resource="kr/or/ddit/ibatis/config/dbinfo.properties"/>

<!-- 각각의 sqlMap파일의 네임스페이스와 id속성값을 연결해서실행할 쿼리문을 선택한다. -->


<settings useStatementNamespaces="true"/>

<!-- 쿼리문에 사용할 VO객체는 사용하려면 패키지 이름을 포함한 전체 이름을기술해야 하는데 그렇게 되면 문장이 너무 길어질 수 있다. 그래서 전체 이름을 대신할 alias를 설정할 수 있다. 형식: <typeAlias alias="alias명" type="클래스의 전체이름"/> -->


<typeAlias type="kr.or.ddit.board.vo.BoardVO" alias="boardVO"/>

<typeAlias type="kr.or.ddit.board.vo.ReplyVO" alias="replyVO"/>

<!-- DB와의 연결을 처리하는 부분 -->



<transactionManager type="JDBC">


<dataSource type="SIMPLE">

<property value="${driver}" name="JDBC.Driver"/>

<property value="${url}" name="JDBC.ConnectionURL"/>

<property value="${user}" name="JDBC.Username"/>

<property value="${pass}" name="JDBC.Password"/>

</dataSource>

</transactionManager>

<!-- 실행할 SQL문은 xml문서로 따로 작성한 후그 xml문서를 아래와 같이 등록한다. 형식: <sqlMap resource="경로명/파일명.xml"/> -->


<sqlMap resource="kr/or/ddit/ibatis/mapper/board.xml"/>

</sqlMapConfig>